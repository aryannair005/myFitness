<div class="col-md-6 col-lg-4 mb-3">
    <div class="card h-100">
        <div class="card-body">
            <h5 class="card-title"><%= workout.name %></h5>
            <p class="card-text text-muted">
                <%= workout.exercises.length %> exercises
            </p>
            <% if (workout.completed) { %>
                <span class="badge bg-success mb-2">Completed</span>
                <p class="small text-muted">
                    Finished in <%= Math.floor(workout.totalTime / 60) %>min <%= workout.totalTime % 60 %>sec
                </p>
            <% } %>
        </div>
        <div class="card-footer bg-transparent">
            <div class="btn-row">
                 <form  action="/workouts/<%=workout._id%>">
                    <button class="btn workout-btn btn-sm" type="submit">View</button>
                 </form>
                <% if (!workout.completed) { %>
                    <form  action="/workouts/<%= workout._id %>/start" method="POST">
                        <button type="submit" class="btn  workout-btn btn-sm">Start</button>
                    </form>
                <% } %>
                <form  action="/workouts/<%= workout._id %>/delete" method="POST" 
                      onsubmit="return confirm('Are you sure?')">
                    <button type="submit" class="btn workout-btn btn-sm">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
