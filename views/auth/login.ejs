<% layout('layouts/boilerplate') %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Login</h3>
                </div>
                <div class="card-body">
                    <%- include('../partials/alerts') %>
                    
                    <form action="/auth/login" method="POST" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control <%= locals.error && locals.error.includes('email') ? 'is-invalid' : '' %>" 
                                   id="email" name="email" value="<%= locals.formData && formData.email ? formData.email : '' %>" required>
                            <% if (locals.error && locals.error.includes('email')) { %>
                                <div class="invalid-feedback"><%= error %></div>
                            <% } %>
                            <div class="invalid-feedback">
                                Email required! 
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control <%= locals.error && locals.error.includes('password') ? 'is-invalid' : '' %>" 
                                   id="password" name="password" required>
                            <% if (locals.error && locals.error.includes('password')) { %>
                                <div class="invalid-feedback"><%= error %></div>
                            <% } %>
                            <div class="invalid-feedback">
                                Password required! 
                            </div>
                        </div>
                        <button type="submit" class="btn border-none w-100">Login</button>
                    </form>
                    
                    <div class="text-center mt-3">
                        <p>Don't have an account? <a href="/auth/register">Sign up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>