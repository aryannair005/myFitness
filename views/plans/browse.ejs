<%- include('../layouts/boilerplate') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Workout Plans</h1>
    <div>
      <a href="/plans/exercises/browse" class="btn btn-outline-primary me-2">
        <i class="fas fa-dumbbell me-1"></i> Browse Exercises
      </a>
    </div>
  </div>

  <!-- Filters -->
  <div class="card mb-4">
    <div class="card-body">
      <form method="GET" class="row g-3">
        <div class="col-md-4">
          <label for="category" class="form-label">Category</label>
          <select class="form-select" id="category" name="category">
            <option value="">All Categories</option>
            <% filterOptions.categories && filterOptions.categories.forEach(category => { %>
              <option value="<%= category %>" <%= filters.category === category ? 'selected' : '' %>><%= category %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-4">
          <label for="difficulty" class="form-label">Difficulty</label>
          <select class="form-select" id="difficulty" name="difficulty">
            <option value="">All Levels</option>
            <% filterOptions.difficulties && filterOptions.difficulties.forEach(difficulty => { %>
              <option value="<%= difficulty %>" <%= filters.difficulty === difficulty ? 'selected' : '' %>><%= difficulty %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-md-4">
          <label for="equipment" class="form-label">Equipment</label>
          <select class="form-select" id="equipment" name="equipment">
            <option value="">All Equipment</option>
            <% filterOptions.equipments && filterOptions.equipments.forEach(equipment => { %>
              <option value="<%= equipment %>" <%= filters.equipment === equipment ? 'selected' : '' %>><%= equipment %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Apply Filters</button>
          <a href="/plans" class="btn btn-outline-secondary ms-2">Reset</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Workout Plans Grid -->
  <% if (workoutPlans && workoutPlans.length > 0) { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% workoutPlans.forEach(plan => { %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0"><%= plan.name %></h5>
                <span class="badge bg-<%= plan.difficulty === 'Beginner' ? 'success' : plan.difficulty === 'Intermediate' ? 'warning' : 'danger' %>">
                  <%= plan.difficulty %>
                </span>
              </div>
              <p class="text-muted small mb-2"><%= plan.category %></p>
              <p class="card-text"><%= plan.description || 'No description available.' %></p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="text-muted small">
                  <i class="far fa-clock me-1"></i> <%= plan.duration || 'N/A' %> min
                </span>
                <div>
                  <a href="/plans/<%= plan._id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="alert alert-info">
      No workout plans found. Try adjusting your filters or check back later.
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>
