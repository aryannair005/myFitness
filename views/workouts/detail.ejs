<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= workout.name %> - Fitness Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/workouts">FitTracker</a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Hello, <%= username %>!</span>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><%= workout.name %></h2>
            <div>
                <% if (!workout.completed) { %>
                    <form action="/workouts/<%= workout._id %>/start" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-primary">Start Workout</button>
                    </form>
                <% } else { %>
                    <span class="badge bg-success fs-6">Completed</span>
                <% } %>
                <a href="/workouts" class="btn btn-secondary">Back</a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h4>Exercises</h4>
                    </div>
                    <div class="card-body">
                        <% if (workout.exercises.length === 0) { %>
                            <p class="text-muted">No exercises added yet.</p>
                        <% } else { %>
                            <div class="exercise-list">
                                <% workout.exercises.forEach((exercise, index) => { %>
                                    <div class="exercise-item border-bottom py-3">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <h5><%= exercise.name %></h5>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="row text-sm">
                                                    <div class="col-3">
                                                        <strong>Sets:</strong> <%= exercise.sets %>
                                                    </div>
                                                    <div class="col-3">
                                                        <strong>Reps:</strong> <%= exercise.reps %>
                                                    </div>
                                                    <div class="col-3">
                                                        <strong>Weight:</strong> <%= exercise.weight %>kg
                                                    </div>
                                                    <div class="col-3">
                                                        <strong>Rest:</strong> <%= exercise.restTime %>s
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Workout Info</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Exercises:</strong> <%= workout.exercises.length %></p>
                        <p><strong>Created:</strong> <%= new Date(workout.createdAt).toLocaleDateString() %></p>
                        <% if (workout.completed) { %>
                            <p><strong>Completed:</strong> <%= new Date(workout.completedAt).toLocaleDateString() %></p>
                            <p><strong>Duration:</strong> <%= Math.floor(workout.totalTime / 60) %>min <%= workout.totalTime % 60 %>sec</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>