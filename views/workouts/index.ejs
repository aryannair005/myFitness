<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Workouts - Fitness Tracker</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/workouts">FitTracker</a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Hello, <%= username %>!</span>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-light btn-sm">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <main class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>My Workouts</h2>
            <a href="/workouts/create" class="btn btn-success">Create New Workout</a>
        </div>

        <% if (workouts.length === 0) { %>
            <div class="text-center py-5">
                <h4 class="text-muted">No workouts yet</h4>
                <p class="text-muted">Create your first workout to get started!</p>
                <a href="/workouts/create" class="btn btn-primary">Create Workout</a>
            </div>
        <% } else { %>
            <div class="row">
                <% workouts.forEach(workout => { %>
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title"><%= workout.name %></h5>
                                <p class="card-text text-muted">
                                    <%= workout.exercises.length %> exercises
                                </p>
                                <% if (workout.completed) { %>
                                    <span class="badge bg-success mb-2">Completed</span>
                                    <p class="small text-muted">
                                        Finished in <%= Math.floor(workout.totalTime / 60) %>min <%= workout.totalTime % 60 %>sec
                                    </p>
                                <% } %>
                            </div>
                            <div class="card-footer bg-transparent">
                                <div class="btn-group w-100">
                                    <a href="/workouts/<%= workout._id %>" class="btn btn-outline-primary btn-sm">View</a>
                                    <% if (!workout.completed) { %>
                                        <form action="/workouts/<%= workout._id %>/start" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-primary btn-sm">Start</button>
                                        </form>
                                    <% } %>
                                    <form action="/workouts/<%= workout._id %>/delete" method="POST" class="d-inline" 
                                          onsubmit="return confirm('Are you sure?')">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>