<% layout('layouts/boilerplate') %>

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Workouts</h2>
        <a href="/workouts/create" class="btn border-none">Create New Workout</a>
    </div>

    <%- include('../partials/alerts') %>

    <% if (workouts.length === 0) { %>
        <div class="text-center py-5">
            <h4 class="text-muted">No workouts yet</h4>
            <p class="text-muted">Create your first workout to get started!</p>
            <a href="/workouts/create" class="btn btn-primary">Create Workout</a>
        </div>
    <% } else { %>
        <div class="row">
            <% workouts.forEach(workout => { %>
                <%- include('../partials/workout-card', { workout }) %>
            <% }) %>
        </div>
    <% } %>
</div>