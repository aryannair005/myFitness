<% layout('layouts/boilerplate') %>

<div class="container my-4">
    <!-- Page header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Workouts</h2>
        <a href="/workouts/create" class="btn btn-primary">+ Create New Workout</a>
    </div>

    <!-- Show error if any -->
    <% if (locals.error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <!-- No workouts message -->
    <% if (workouts.length === 0) { %>
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-dumbbell fa-4x text-muted"></i>
            </div>
            <h4 class="text-muted">No workouts yet</h4>
            <p class="text-muted mb-4">Create your first workout to get started!</p>
            <a href="/workouts/create" class="btn btn-primary btn-lg">Create Your First Workout</a>
        </div>
    <% } else { %>
        <!-- Workouts grid -->
        <div class="row">
            <% workouts.forEach(workout => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <!-- Workout name -->
                            <h5 class="card-title">
                                <a href="/workouts/<%= workout._id %>" class="text-decoration-none">
                                    <%= workout.name %>
                                </a>
                            </h5>
                            
                            <!-- Workout info -->
                            <div class="workout-info mb-3">
                                <small class="text-muted">
                                    <%= workout.exercises.length %> exercises â€¢ 
                                    Created <%= new Date(workout.createdAt).toLocaleDateString() %>
                                </small>
                            </div>
                            
                            <!-- Status badge -->
                            <% if (workout.completed) { %>
                                <span class="badge bg-success mb-2">Completed</span>
                                <div class="small text-muted">
                                    Duration: <%= Math.floor(workout.totalTime / 60) %>m <%= workout.totalTime % 60 %>s
                                </div>
                            <% } else { %>
                                <span class="badge bg-primary mb-2">Ready</span>
                            <% } %>
                            
                            <!-- Action buttons -->
                            <div class="mt-3">
                                <% if (!workout.completed) { %>
                                    <form action="/workouts/<%= workout._id %>/start" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-success btn-sm">Start</button>
                                    </form>
                                <% } %>
                                
                                <a href="/workouts/<%= workout._id %>" class="btn btn-outline-primary btn-sm">View</a>
                                
                                <form action="/workouts/<%= workout._id %>/delete" method="POST" 
                                      class="d-inline" 
                                      onsubmit="return confirm('Delete this workout?')">
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>